@page
@model SLGIS.Web.Areas.Admin.Pages.Hydropower.NewOrEditModel
@{
    ViewBag.Title = (Model.HydropowerPlant.Id != Guid.Empty ? "Chỉnh sửa" : "Tạo mới") + " nhà máy thủy điện";
    ViewBag.Breadcrumbs = "<a href='" + Url.Page("Index") + "' class='breadcrumb-item'>Nhà máy thủy điện</a>" +
                          "<span class='breadcrumb-item active'>" + ViewBag.Title + "</span>";
}

<form enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.HydropowerPlant.Id)

    <div class="card mt-2 mb-2 shadow-base">
        <div class="card-header">
            <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                <strong>Thông tin thủy điện</strong>
                <i class="fa fa-caret-down pull-right mt-1"></i>
            </a>
        </div>
        <div class="card-body collapse show" id="collapseExample">
            <div class="row">
                <div class="col">
                    <button class="btn btn-primary mr-1" type="submit">Lưu</button>
                    <a href="@Url.Page("Index")" class="btn btn-outline-secondary">Quay lại</a>
                    <hr />
                </div>               
                <partial name="_PlantPartial" />
                <div class="col">
                    <hr />
                    <button class="btn btn-primary mr-1" type="submit">Lưu</button>
                    <a href="@Url.Page("Index")" class="btn btn-outline-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</form>

@if (Model.HydropowerPlant.Id != Guid.Empty)
{
    <div class="mt-4">
        <a href="@Url.Page("NewOrEditDams", new { plantId = Model.HydropowerPlant.Id })" class="btn btn-primary btn-sm pull-right">Thêm mới đập</a>
        <h4 class="tx-gray-800 mg-b-5 panel-title">Đập thủy điện</h4>
    </div>
    <form method="post">
        <div class="row mt-2">
            <div class="col-12">
                <div class="card shadow-base bd-0">
                    <div class="table-responsive">
                        <table class="table mg-b-0" cellspacing="0">
                            <tr>
                                <th>STT</th>
                                <th>
                                    Tên đập
                                </th>
                                <th>
                                    Địa chỉ
                                </th>
                                <th></th>
                            </tr>

                            @{
                                var stt = 1;
                                foreach (var item in Model.HydropowerPlant.HydropowerDams)
                                {
                                    <tr class="stat even">
                                        <td class="ac">
                                            @(stt++)
                                        </td>
                                        <td>
                                            <a href="@Url.Page("NewOrEditDams", new { plantId = Model.HydropowerPlant.Id, id = item.Id })">@item.Name</a>
                                        </td>
                                        <td>
                                            @item.Address
                                        </td>
                                        <td>
                                            <a href="@Url.Page("NewOrEditDams", new { plantId = Model.HydropowerPlant.Id, id = item.Id })" class="btn btn-sm btn-primary">Sửa</a>
                                            <button type="submit" asp-page-handler="DeleteDams" asp-route-plantId="@Model.HydropowerPlant.Id" asp-route-id="@item.Id" class="btn btn-sm btn-danger btnConfirm">
                                                Xóa
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </form>
}

@section Styles {
    <style>
        .select2-results__option[aria-selected="true"] {
            display: none;
        }
        .card-header a {
            display: inline-block;
            width: 100%;
        }
    </style>
}

@section Scripts {
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".select2").select2({ width: '100%' });

            $(".gisimage input[type='file']").change(function () {
                readURL(this, function (base64Image) {
                    $('.gisimage img').attr('src', base64Image);
                });
            })
        });

        function readURL(input, callback) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    callback(e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
