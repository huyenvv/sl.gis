@page
@model SLGIS.Web.Pages.Setting.IndexModel
@{
    ViewBag.Title = "Cài đặt chung";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-base mb-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Setting.Id)
                    <div class="form-group">
                        <label>Ngưỡng tách cột đồ thị <br />
                            <small class="help-block text-warning">Các giá trị cách nhau bằng dấu phẩy</small>
                        </label>
                        
                        @Html.EditorFor(model => model.Setting.SeparatorColumn, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: 123, 456" } })
                        @Html.ValidationMessageFor(model => model.Setting.SeparatorColumn, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Lưu</button>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}