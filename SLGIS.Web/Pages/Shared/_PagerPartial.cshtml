@model PagerViewModel
<!-- pager -->
@if (Model.Pager.EndPage > 1)
{
    var baseUrl = Model.BaseUrl + (Model.BaseUrl.Contains("?") ? "&" : "?");
    <div class="ht-80 d-flex align-items-center justify-content-center">
        <ul class="pagination pagination-basic mg-b-0">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@(Model.BaseUrl)">
                        <i class="fa fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@(Model.BaseUrl)?pageIndex=@(Model.Pager.CurrentPage - 1)">
                        <i class="fa fa-angle-left"></i>
                    </a>
                </li>
            }

            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
            {
                <li class="@(page == Model.Pager.CurrentPage ? "active" : "") page-item">
                    <a class="page-link" href="@(baseUrl)pageIndex=@(page)">@(page)</a>
                </li>
            }

            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@(Model.BaseUrl)?pageIndex=@(Model.Pager.CurrentPage + 1)">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@(Model.BaseUrl)?pageIndex=@(Model.Pager.TotalPages)">
                        <i class="fa fa-angle-double-right"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
}		