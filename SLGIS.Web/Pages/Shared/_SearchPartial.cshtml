@model SLGIS.Web.Model.SearchModel

<style>
    #frmSearch input[type="date"] {
        height: 39.6px;
    }

    #frmSearch label {
        margin-bottom: 0;
    }
</style>

@using (Html.BeginForm(null, null, FormMethod.Get, new { role = "form", Class="mt-4", id = "frmSearch" }))
{
    <div class="row">
        <div class="col">
            <div class="d-md-flex">
                <div>
                    <label>Từ khóa tìm kiếm</label>
                    <input asp-for="FilterText" class="form-control" placeholder="Tìm kiếm" />
                </div>
                <div class="ml-md-2">
                    <label>Từ ngày</label>
                    <input asp-for="StartDate" type="date" class="form-control" placeholder="Từ ngày" />
                </div>
                <div class="ml-md-2">
                    <label>Đến ngày</label>
                    <input asp-for="EndDate" type="date" class="form-control" placeholder="đến ngày" />
                </div>
                <div class="ml-md-2">
                    <label>&nbsp;</label>
                    <span class="input-group-btn" id="btnSearch">
                        <button class="btn bd bg-primary tx-white pointer" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
}

